<div data-id="<%= location.id %>" class="map-list-item location-list-item <%= active ? 'marker-active' : ''%> list-group-item">
  <div class="inactive-content">
    <div class="list-index">
      <span><%= location.marker_id %></span>
    </div>
    <img src="<%= location.image %>" alt="<% location.title %> logo" class="img-rounded logo pull-left" />
    <div>
      <h4 class="list-group-item-heading"><%= location.title %></h4>
      <p class="team-title strong list-group-item-text small"><%= location.team_name %></p>
      <p class="upcase address list-group-item-text small">
        <%= location.street %>
          </p>
        </div>
        <span class="text-info distance small"><%= location.distance %></span>
      </div>
      <div class="active-content">
        <a class="location-link" href="<%= Routes.location_path(location.id) %>" alt="See more about <%= location.title %>">
          <div class="list-index">
            <span><%= location.marker_id %></span>
          </div>
          <img src="<%= location.image %>" alt="<% location.title %> logo" class="img-rounded logo pull-left" />
          <div>
            <h4 class="list-group-item-heading"><%= location.title %></h4>
            <p class="strong list-group-item-text small team-title"><%= location.team_name %></p>
            <span class="rating">
              <% for (var n = 1; n <= 5; ++n) { %> 
                <% if (location.stars >= n) { %>
                  <span class="fa fa-star"></span>
                <% } else if (location.stars+1 == n && location.half_star) { %>
              <span class="fa fa-star-half-o"></span>
            <% } else { %>
              <span class="fa fa-star-o"></span>
            <% } %>
          <% } %>
        </span>
        <span class="text-muted small">
          (<%= location.review_count %>)  
        </span>
        <p class="list-group-item-text small upcase address">
          <span class="fa fa-map-marker"></span>
          <%= location.address %>
        </p>
      </div>
      <br/>
    </a>
    <ul class="small list-unstyled">
      <% if (null !== location.phone && location.phone.length > 0) { %>
        <li><span class="col-md-offset-1 label text-muted upcase">Phone</span> <a class="phone" href="tel:<%= location.phone %>"><%= location.phone %></a></li>
      <% } %>
      <% if (null !== location.email && location.email.length > 0) { %>
        <li><span class="col-md-offset-1 label text-muted upcase">Email</span> <a class="email" href="mailto:<%= location.email %>"><%= location.email %></a></li>
      <% } %>
      <% if (null !== location.website && location.website.length > 0) { %>
        <li><span class="col-md-offset-1 label text-muted upcase">Website</span> <a class="website" href="http://<%= location.website %>"><%= location.website %></a></li>
      <% } %>
      <li>
        <span class="col-md-offset-1 label text-muted upcase">Profiles</span>
        <% if (null !== location.facebook_url && location.facebook_url.length > 0) { %>
          <a class="facebook" href="<%= location.facebook_url %>"><i class="fa fa-facebook-square "></i></a>
        <% } %>
        <% if (null !== location.twitter && location.twitter.length > 0) { %>
          <a class="twitter" href="http://twitter.com/<%= location.twitter %>"><i class="fa fa-twitter-square "></i></a>
        <% } %>
        <% if (null !== location.instagram && location.instagram.length > 0) { %>
          <a class="instagram" href="http://instagram.com/<%= location.instagram %>"><i class="fa fa-instagram "></i></a>
        <% } %>
        <% if (null !== location.google_url && location.google_url.length > 0) { %>
          <a class="google" href="<%= location.google_url %>"><i class="fa fa-google "></i></a>
        <% } %>
        <% if (null !== location.yelp_url && location.yelp_url.length > 0) { %>
          <a class="yelp" href="<%= location.yelp_url %>"><i class="fa fa-yelp "></i></a>
        <% } %>
      </li>
    </ul>
    <span class="text-info distance small"><%= location.distance %></span>
  </div>
</div>
