<div data-id="<%= location.id %>" class="location-list-item list-group-item">
  <a style="width: 100%" class="pull-left text-primary" title="<%= location.title %>" href="<%= Routes.location_path(location.param, {ref: 'recent_l'}) %>"><h5 class="list-group-item-heading"><%= location.title %></h5></a>
  <div class="clear clear-fix"></div>
  <% if (location.image) { %>
    <img src="<%= location.image %>" alt="<% location.title %>" class="pull-left logo img-rounded" />
  <% } else { %>
    <canvas class="pull-left logo img-rounded" width="50" height="50" data-name="<%= location.title %>" data-avatar-placeholder></canvas>
  <% } %>
  <div class="content">
    <span class="rating">
      <% for (var n = 1; n <= 5; ++n) { %> 
        <% if (location.stars >= n) { %>
          <span class="fa fa-star"></span>
        <% } else if (location.stars+1 == n && location.half_star) { %>
          <span class="fa fa-star-half-o"></span>
        <% } else { %>
          <span class="fa fa-star-o"></span>
        <% } %>
      <% } %>
    </span>
    <span class="text-muted small">
      (<%= location.review_count %>)  
    </span>
    <p class="timestamp small text-right pull-right text-muted"><%= location.created_at %></p>
    <br />
    <a class="address" href="<%= Routes.map_path({lat: location.lat, lng: location.lng, ref: 'recent_l'}) %>" title="See <%= location.title %> on the map">
      <span class="fa fa-map-marker"></span>
      <span class="small"><%= location.city %>, <%= location.country %></span>
    </a>
  </div>
  <div class="clear"></div>
</div>
