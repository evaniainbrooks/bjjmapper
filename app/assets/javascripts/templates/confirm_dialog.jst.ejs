<div aria-hidden="true" aria-labelledby="confirmDialog" class="confirm-dialog modal fade" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button aria-hidden="true" class="close" data-dismiss="modal" type="button">&times;</button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
      <div class="modal-body"><%= body %></div>
      <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal"><%= cancel %></button>
        <button data-returnto="<%= returnto %>" data-url="<%= url %>" data-method="<%= method %>" type="submit" class="confirm btn btn-<%= type %>"><%= confirm %></button>
      </div>
    </div>
  </div>
</div>
