.container.page
  = form_for(team, html: { class: 'form ' + edit_mode_classes }) do |f|
    .row
      .col-md-12
        = render partial: 'breadcrumb', locals: { team: team }
    .row
      .col-md-2
        .display-field
          %img.center-block{:src => team.image}
        .edit-field
          %img.center-block.edit-image{:src => team.image}
      .col-md-6
        %h1
          = team.name
          - if team.parent_team.present?
            %br/
            %small= link_to "Part of #{team.parent_team.name}", team_path(team.parent_team)
        .edit-field
          = f.label :description
          = f.text_area :description, placeholder: 'Provide a description of the team/association', class: 'form-control', rows: 4
        %p.display-field= team.description
    %hr/
    .row
      .col-md-12
        %h3= "#{pluralize(team.locations.count, 'Academy')}"
        %table.table.table-striped
          %thead
            %tr
              %th Name
              %th Instructors
              %th Address
              %th Phone Number
          %tbody
          - team.locations.each do |location|
            %tr
              %td
                = link_to location.title, location_path(location)
              %td.small
                = location.instructors.map{|o| link_to(o.name, user_path(o))}.join(", ").html_safe
              %td
                = location.address
              %td
                = location.phone
    %hr/
    .row
      .col-md-12
        %h3 Members

