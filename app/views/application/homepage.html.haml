= content_for(:scripts) do
  = render partial: 'facebook_sdk'

.container.homepage
  .div#fb-root
  .row
    .col-md-5
      %h3.pull-left Near You
      %a.pull-right.btn.btn-default.btn-sm.title-btn{:href => map_path(lat: @map[:lat], lng: @map[:lng], :ref => 'homepage'), :title => 'Academy Map'}
        %span.fa.fa-search-plus
        See larger map
      = render partial: 'maps/map'
    .col-md-4
      %h3.pull-left
        New Additions
      .btn-group.title-btn.pull-right
        = link_to wizard_locations_path(ref: 'hprec'), class: 'btn btn-success btn-sm' do
          %i.fa.fa-map-marker
          Create Academy
        %button.btn.btn-success.btn-sm.dropdown-toggle{:'aria-expanded' => false, :'data-toggle' => 'dropdown', :type => 'button'}
          %span.caret
          %span.sr-only
            Toggle Dropdown
        %ul.dropdown-menu{:role => 'menu'}
          %li
            = link_to wizard_events_path(ref: 'hprec') do
              %i.fa.fa-calendar-o
              Create Event

      .recent-locations.location-list.loading.clear
        .loading-overlay
          %span.fa.fa-refresh.fa-3x.fa-spin
        .empty-message
          %i.text-muted There are no recent locations
        .items
    .col-md-3
      %h3.pull-left Upcoming Events
      .upcoming-events.location-list.loading.clear
        .loading-overlay
          %span.fa.fa-refresh.fa-3x.fa-spin
        .items
        .empty-message
          %i.text-muted There are no upcoming events
  .row
    .col-md-12
      %h3 Around The World
  .row
    - per_column = (@countries.size / 4.0).ceil
    - @countries.each_slice(per_column).each do |countries|
      .col-md-3
        - countries.each do |country|
          = link_to directory_segment_path(country: country.name), class: 'small block', title: "List of BJJ gyms in #{country.name}" do
            Brazilian Jiu-Jitsu academies in
            %strong= country.name
  %hr/
  .row
    .col-md-4
      .fb-page{"data-colorscheme" => "light", "data-header" => "false", "data-href" => "https://www.facebook.com/BJJMapper", "data-show-border" => "true", "data-show-faces" => "false", "data-show-posts" => "false"}
    .col-md-8.hidden-sm.hidden-xs
      %br/
      = render partial: 'application/google_adsense_banner'

= content_for(:scripts) do
  = javascript_include_tag 'map'
  :coffeescript
    $(document).ready ->
      recentView = new RollFindr.Views.RecentLocationsView()
      upcomingView = new RollFindr.Views.UpcomingEventsView()

      mapModel = new RollFindr.Models.Map(#{render_json(@map)})
      mapView = new RollFindr.Views.MapView({el: $('.map'), model: mapModel})

