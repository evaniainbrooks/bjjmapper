.add-event-dialog.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  = form_for([location, location.events.new], html: { class: 'form-horizontal' } ) do |f|
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{'data-dismiss' => 'modal', 'type' => 'button'}
            %span{'aria-hidden' => 'true'} &times;
            %span.sr-only Close
          %h4 Create Academy Event
        .modal-body
          %ul.nav.nav-tabs{:role => 'tablist'}
            %li.active
              %a{:href => '#class-event', 'role' => 'tab', 'data-toggle' => 'tab'} Scheduled Class
            %li
              %a{:href => '#special-event', 'role' => 'tab', 'data-toggle' => 'tab'} Seminar
            %li
              %a{:href => '#tournament-event', 'role' => 'tab', 'data-toggle' => 'tab'} Tournament
          .tab-content
            .tab-pane#special-event
              %br/
              .form-group
                %label.col-md-4.control-label{:for => "event[title]"} Title
                .col-md-8
                  = f.text_field :title, placeholder: 'eg. Rickson Gracie Seminar', class: 'form-control input-md'
              .form-group
                %label.col-md-4.control-label{:for => "event[instructor]"} Guest Instructor
                .col-md-8
                  = f.select :instructor, options_for_select(select_instructors), {}, class: 'form-control input-md'
              .form-group
                %label.col-md-4.control-label{:for => "event[starting]"} Start
                .col-md-8
                  = select_hour(0, {field_name: 'event_starting', ampm: true}, {class: 'form-control input-md'})
              .form-group
                %label.col-md-4.control-label{:for => "event[ending]"} End
                .col-md-8
                  = select_hour(1, {field_name: 'event_ending', ampm: true}, {class: 'form-control input-md'})
              .form-group
                %label.col-md-4.control-label{:for => "event[price]"} Price
                .col-md-8
                  = f.text_field :price, class: 'form-control input-md'
              .form-group
                %label.col-md-4.control-label{:for => "event[description]"} Description
                .col-md-8
                  = f.text_area :description, class: 'form-control input-md'
            .tab-pane#tournament-event
              %h4.text-danger Coming soon :)
            .active.tab-pane#class-event
              .container-fluid
                .row
                  %br/
                  .col-md-12
                    %fieldset
                      / Text input
                      .form-group
                        %label.col-md-4.control-label{:for => "event[title]"} Title
                        .col-md-8
                          = f.text_field :title, placeholder: 'eg. BJJ Beginners, Competition Class', class: 'form-control input-md'
                      .form-group
                        %label.col-md-4.control-label{:for => "event[instructor]"} Instructor
                        .col-md-8
                          = f.select :instructor, location.instructors.map{|o| [o.name, o.id]}, {}, class: 'form-control input-md'
                      .form-group
                        %label.col-md-4.control-label{:for => "event[starting]"} Start
                        .col-md-8
                          = select_hour(0, {field_name: 'event_starting', ampm: true}, {class: 'form-control input-md'})
                      .form-group
                        %label.col-md-4.control-label{:for => "event[ending]"} End
                        .col-md-8
                          = select_hour(1, {field_name: 'event_ending', ampm: true}, {class: 'form-control input-md'})
                      .form-group
                        .checkbox.col-md-offset-4
                          %label.control-label
                            = f.check_box :is_all_day
                            %strong All Day Event
                      .form-group
                        %label.col-md-4.control-label{:for => "event[recurrence]"} Repeat
                        .col-md-8
                          = f.select :recurrence, [['None', 0],['Daily', 1],['Every second day', 2], ['Weekly', 7], ['Bi-weekly', 14]], {}, class: 'form-control input-md'
        .modal-footer
          %button.btn.btn-default{:type => 'button', 'data-dismiss' => 'modal'} Cancel
          %button.btn.btn-primary{:type => 'submit'} Create Event
