.col-sm-6.col-md-4.instructor
  .container-fluid
    %button.edit-field.close.remove-user{"aria-hidden" => "true", :type => "button", "data-id" => user.id} &times;
  %a.thumbnail{:href => user_path(user)}
    %img{:alt => "#{user.name} profile image", :src => user.image}
    .caption
      %h3= user.name
      %div.belt{:class => "belt-#{user.belt_rank}"}
        %b.pull-left.small= user.rank_in_words
        .grade{:class => "grade-#{user.stripe_rank}"}
          - user.stripe_rank.times.each do
            %span.stripe
