%a{:name => 'register'}
%h2 Register a New Account
%form{:method => 'post', :action => '/auth/identity/register', :novalidate => 'noValidate'}
  = hidden_field_tag :authenticity_token, form_authenticity_token
  .form-group
    %label{:for => "email"} Name
    %input.form-control{:name => "name", :type => "text"}/
  .form-group
    %label{:for => "email"} Email
    %input.form-control{:name => "email", :type => "text"}/
  .form-group
    %label{:for => "password"} Password
    %input.form-control{:name => "password", :type => "password"}/
  .form-group
    %label{:for => "password_confirmation"} Confirm Password
    %input.form-control{:name => "password_confirmation", :type => "password"}/
  %button.btn.btn-success{:type => "submit"} Register Account
