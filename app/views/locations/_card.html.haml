%li.location-card.card
  %a.thumbnail{:href => location_path(location, ref: "card#{location_counter}")}
    .pull-left
      %img.img-tiny{src: location.image, alt: location.title}/
    .caption
      %p.text-primary= location.title
      %b.small= location.team_name
      %p
        %span.small.text-muted= location.street
        %span.small.text-info.distance.pull-right
          - if location.distance.present?
            = surround '(', ')' do
              = location.distance
