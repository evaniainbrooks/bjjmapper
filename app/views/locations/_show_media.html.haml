%h3.pull-left 
  Media
  %small 
    Use the Instagram hashtag 
    %b.text-primary 
      %a{:title => 'Explore Instagram Hashtag', :href => "https://instagram.com/explore/tags/#{location.ig_hashtag}/"} ##{location.ig_hashtag}
    to display images or video here

%a{:name => 'media'}
#instafeed.clear

= content_for(:scripts) do
  :javascript
    var feed = new Instafeed({
      get: 'tagged',
      sortBy: 'most-recent',
      tagName: '#{location.ig_hashtag}',
      clientId: '#{ig_client_id}'
    });

    feed.run();
