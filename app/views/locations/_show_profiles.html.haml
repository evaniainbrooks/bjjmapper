- if location.profiles.present?
  %b.small.text-muted.upcase 
    Profiles
    - if Role.power(current_user.role) >= Role.power(Role::MODERATOR)
      = "(src: #{location.object.source || 'BJJMapper'})"
  %br/
  - [:google, :yelp, :facebook].each do |profile|
    = render partial: 'progress_bar', locals: { sym: profile, address: location.send("#{profile}_address"), href: location.send("#{profile}_url"), value: location.send("#{profile}_match") }
  - if location.instagram.present?
    = link_to 'http://instagram.com/' + location.instagram, class: 'instagram', target: '_blank' do
      %i.fa.fa-instagram
  - if location.twitter.present?
    = link_to 'http://twitter.com/' + location.twitter, class: 'twitter', target: '_blank' do
      %i.fa.fa-twitter-square
