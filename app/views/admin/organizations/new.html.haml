.container
  .row
    .col-md-12
      %h1 Create New Organization 
      .form
        = form_for(:organization, url: admin_organizations_path) do |f|
          .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control'
          .form-group
            = f.label :description
            = f.text_area :description, class: 'form-control'
          .form-group
            = f.label :abbreviation
            = f.text_area :abbreviation, class: 'form-control'
          .form-group
            = f.label :image
            = f.text_area :image, class: 'form-control'
          .form-group
            = f.label :image_large
            = f.text_area :image_large, class: 'form-control'
          .form-group
            = f.label :website
            = f.text_area :website, class: 'form-control'
          .form-group
            = f.label :email
            = f.text_area :email, class: 'form-control'
          .form-group
            = f.submit

