    %meta{:content => "/ms-icon-144x144.png", :name => "msapplication-TileImage"}
    %meta{:content => "#ffffff", :name => "theme-color"}/
    %meta{:property => 'og:app_id', :content => '1566945533528111'}/
    %meta{:property => 'og:type', :content => 'website'}/
    = yield(:head) if content_for(:head)
  %body{:data => {:userid => current_user.id}}
    = render partial: 'navbar'
    = yield

    = render partial: 'report_modal'
    = render partial: 'login_modal'
    = render partial: 'reviews/add_review_dialog'
    = render partial: 'application/footer'
    = javascript_include_tag 'application'
    = yield(:scripts) if content_for?(:scripts)
    = render partial: 'user_model'
    = render partial: 'confirm_page_exit'
